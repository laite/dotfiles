// Ex 11.16: contents of a file

#include "../../helpers.h"

int main()
{
	ifstream file("sourcefile");

	if (!file)
		cerr << "No file found!";

	istream_iterator<string> fileIter(file);
	istream_iterator<string> endIter;

	ostream_iterator<string> output(cout, " ");

	copy(fileIter, endIter, output);

	*output = std::endl;

	return 0;
}
